{
	"name": "gmdebug",
	"description": "gmod debugger using dap",
	"version": "0.0.1",
	"publisher": "ponobodod",
	"repository": {
		"type": "github",
		"url": "https://github.com/ponobodod/gmdebug"
	},
	"dependencies": {
		"@raygun-nickj/mmap-io": "^1.3.0",
		"@types/ffi-napi": "^4.0.4",
		"@types/node": "^16.9.1",
		"@types/ref-array-di": "^1.2.3",
		"ffi-napi": "^4.0.3",
		"ip": "^1.1.5",
		"node-gyp": "^8.2.0",
		"ref-array-di": "^1.2.2",
		"ref-struct-di": "^1.1.1",
		"sudo-prompt": "9.2.1",
		"vscode-debugadapter": "^1.41.0",
		"vscode-debugprotocol": "^1.41.0",
		"win32-api": "^9.6.0"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"main": "./bin/extension.js",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "gmdebug",
				"label": "Garry's mod debugger - gmdebug",
				"program": "./bin/main.js",
				"runtime": "node",
				"configurationAttributes": {
					"attach": {
						"required": [
							"serverFolder"
						],
						"properties": {
							"serverFolder": {
								"type": "string",
								"description": "The path to your garry's mod server (the garrysmod folder specifically)",
								"default": "/path_to_server_from_root/garrysmod"
							},
							"clientFolders": {
								"type": "array",
								"description": "The path to the client connecting to the server you wish to debug."
							}
						}
					},
					"launch": {
						"required": [
							"serverFolder",
							"programPath",
							"programArgs"
						],
						"properties": {
							"serverFolder": {
								"type": "string",
								"description": "The path to your garry's mod server (the garrysmod folder specifically)",
								"default": "/path_to_server_from_root/garrysmod"
							},
							"clientFolders": {
								"type": "array",
								"description": "The path to the client connecting to the server you wish to debug."
							},
							"programPath": {
								"type": "string",
								"description": "The path to your server executable/config, or 'auto' to find and run the default server executable (srcds_run)",
								"default": "auto"
							},
							"programArgs": {
								"type": "array",
								"description": "Arguments to launch server. Fill out if using the option 'auto' for programPath",
								"default": [
									"+map",
									"gm_flatgrass",
									"+sv_lan",
									"1"
								]
							},
							"autoConnectLocalGmodClient": {
								"type": "bool",
								"description": "For convinence, when the server has launched you can have your steam account autoconnect to it",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"label": "gmdebug: Launch server",
						"description": "Launch your garry's mod server.",
						"body": {
							"type": "gmdebug",
							"request": "launch",
							"name": "gmdebug : Launch server",
							"serverFolder": "/path_to_server_from_root/garrysmod",
							"programPath": "auto",
							"autoConnectLocalGmodClient": true
						}
					}
				],
				"configurationSnippets": [
					{
						"label": "gmdebug: Launch server",
						"description": "Launch your garry's mod server.",
						"body": {
							"type": "gmdebug",
							"request": "launch",
							"name": "gmdebug : Launch server",
							"serverFolder": "/path_to_server_from_root/garrysmod",
							"programPath": "auto",
							"autoConnectLocalGmodClient": true
						}
					}
				]
			}
		]
	},
	"devDependencies": {
		"dts2hx": "^0.16.0"
	}
}
