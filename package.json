{
	"name": "gmdebug",
	"description": "gmod debugger using dap",
	"version": "0.0.2",
	"publisher": "ponobodod",
	"repository": {
		"type": "github",
		"url": "https://github.com/ponobodod/gmdebug"
	},
	"dependencies": {
		"@raygun-nickj/mmap-io": "^1.3.0",
		"@types/ffi-napi": "^4.0.4",
		"@types/node": "^16.9.1",
		"@types/ref-array-di": "^1.2.3",
		"ffi-napi": "^4.0.3",
		"ip": "^1.1.5",
		"node-gyp": "^8.2.0",
		"ref-array-di": "^1.2.2",
		"ref-struct-di": "^1.1.1",
		"sudo-prompt": "9.2.1",
		"vscode-debugadapter": "^1.41.0",
		"vscode-debugprotocol": "^1.41.0",
		"win32-api": "^9.6.0"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"main": "./bin/extension.js",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "gmdebug",
				"label": "Garry's mod debugger - gmdebug",
				"program": "./bin/main.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"serverFolder",
							"programPath",
							"programArgs",
							"addonFolderName"
						],
						"properties": {
							"serverFolder": {
								"type": "string",
								"description": "The path to your garry's mod server (the garrysmod folder specifically)",
								"default": "/path_to_server_from_root/garrysmod"
							},
							"clientFolder": {
								"type": "string",
								"description": "The path your local gmod installation"
							},
							"programPath": {
								"type": "string",
								"description": "The path to your server executable/config, or 'auto' to find and run the default server executable (srcds_run)",
								"default": "auto"
							},
							"otherAddons": {
								"type": "array",
								"description": "An array of other addons you wish to automatically download(and debug) alongside this one",
								"default": [
									{
										"url/id" : "2586573261",
										"folderName": "install_at_your_peril"
									},
									{
										"url/id": "https://github.com/JetBoom/zombiesurvival",
										"folderName": "github_links_also_work",
										"gitAddonBaseFolder": "./"
									},
									{
										"url/id": ""
									}
								]
									
								
							},
							"programArgs": {
								"type": "array",
								"description": "Arguments to launch server. Fill out if using the option 'auto' for programPath",
								"default": [
									"+map",
									"gm_flatgrass",
									"+sv_lan",
									"1"
								]
							},
							"multirunOptions": {
								"type": "array",
								"description": "Arguments to add to each multirun gmod instance",
								"default": [
									"-width",
									"1280",
									"-height",
									"720",
									"-window"
								]
							},
							"nodebugClient": {
								"type": "bool",
								"description": "More of a reminder that to debug clients, you need to specify clientFolder. If you set clients to 1 without this, gmdebug will not run",
								"default": true
							},
							"clients": {
								"type": "number",
								"description": "Number of clients to autolaunch",
								"default": 1
							},
							"noCopy": {
								"type": "bool",
								"description": "Add to disable copying your addon, and make copyAddonBaseFolder and addonName not required",
								"default": true
							},
							"copyAddonBaseFolder": {
								"type": "string",
								"description": "Copy everything inside specifed folder to addons/{addonName} (which you must also specify)",
								"default": "./"
							},
							"addonName": {
								"type": "string",
								"description": "The name of the addon folder when copied into the server garrysmod/addons folder",
								"default": "really_cool_addon"
							}
						}
					}
				},
				"initialConfigurations": [
					{
						
						"type": "gmdebug",
						"request": "launch",
						"name": "gmdebug : Launch server",
						"serverFolder": "/path_to_server_from_root/garrysmod",
						"programPath": "auto",
						"programArgs" : [
							"+map",
							"gm_flatgrass",
							"+sv_lan",
							"1"
						],
						"nodebugClient" : true,
						"clients" : 1,
						"addonName": "really_cool_addon",
						"copyAddonBaseFolder": "./"
						
						
					}
				],
				"configurationSnippets": [
					{
						"label": "gmdebug: Launch server",
						"description": "Launch your garry's mod server.",
						"body": {
							"type": "gmdebug",
							"request": "launch",
							"name": "gmdebug : Launch server",
							"serverFolder": "/path_to_server_from_root/garrysmod",
							"programPath": "auto",
							"nodebugClient" : true,
							"clients" : 1,
							"addonName": "really_cool_addon",
							"copyAddonBaseFolder": "./"
						}
					}
				]
			}
		]
	},
	"devDependencies": {
		"dts2hx": "^0.16.0"
	}
}
